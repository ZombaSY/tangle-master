<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5EBEBB"
    tools:ignore="Overdraw">
    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logoTextView"
        android:gravity="center_horizontal"
        android:text="logo"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp"
        />

    <LinearLayout
        android:id="@+id/IDlinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="#5EBEBB"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:text="아이디    "
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/idEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:inputType="text"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/PWlinearLayout"
        android:layout_below="@+id/IDlinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5EBEBB"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/pwTextView"
            android:text="비밀번호"
            android:textColor="#ffffff"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="50dp"
            android:textSize="20sp" />

        <EditText
            android:layout_marginRight = "20dp"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/pwEditText" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/loginTextView"
        android:text="로그인"
        android:layout_below="@+id/PWlinearLayout"
        android:layout_toLeftOf="@+id/registerTextView"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/registerTextView"
        android:text="회원가입"
        android:layout_alignRight="@id/PWlinearLayout"
        android:layout_below="@+id/PWlinearLayout"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textSize="18sp" />


</RelativeLayout>