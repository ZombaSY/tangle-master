<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GridViewMainText"
        android:text="원하는 측면을 선택해주세요"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GridViewMainText"
        android:orientation="vertical"
        android:layout_marginBottom="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/HairImageView1"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/hairview1"
                android:layout_margin="5dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/HairImageView2"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/hairview2"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/HairImageView3"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/hairview3"
                android:layout_margin="5dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/HairImageView4"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/hairview4"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/HairImageView5"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/hairview5"
                android:layout_margin="5dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/HairImageView6"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/hairview6"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20sp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="닫기"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>
